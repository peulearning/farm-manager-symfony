{% extends 'base.html.twig' %}

{% block title %}Lista de Veterin치rios{% endblock %}

{% block body %}
<h1 class="mb-3">游뽘 Veterin치rios</h1>

<a href="{{ path('veterinarios_new') }}" class="btn btn-success mb-3">+ Novo Veterin치rio</a>

<table class="table table-striped table-bordered">
    <thead class="table-success">
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>CRMV</th>
            <th>Fazendas Associadas</th>
            <th>A칞칫es</th>
        </tr>
    </thead>
    <tbody>
        {% for veterinario in veterinarios %}
            <tr>
                <td>{{ veterinario.id }}</td>
                <td>{{ veterinario.nome }}</td>
                <td>{{ veterinario.crmv }}</td>
                <td>
                    {% if veterinario.fazendas is not empty %}
                        {% for fazenda in veterinario.fazendas %}
                            <span class="badge bg-info text-dark">{{ fazenda.nome }}</span>
                        {% endfor %}
                    {% else %}
                        <small class="text-muted">Nenhuma fazenda associada</small>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('veterinarios_show', {id: veterinario.id}) }}" class="btn btn-sm btn-primary">Ver</a>
                    <a href="{{ path('veterinarios_edit', {id: veterinario.id}) }}" class="btn btn-sm btn-warning">Editar</a>
                    <form method="post" action="{{ path('veterinarios_delete', {id: veterinario.id}) }}" class="d-inline" onsubmit="return confirm('Excluir este veterin치rio?')">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ veterinario.id) }}">
                        <button class="btn btn-sm btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="5" class="text-center">Nenhum veterin치rio cadastrado.</td></tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
