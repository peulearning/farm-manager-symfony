{% extends 'base.html.twig' %}

{% block title %}Lista de Gados{% endblock %}

{% block body %}
<h1 class="mb-3">üêÑ Lista de Gados</h1>

<a href="{{ path('gados_new') }}" class="btn btn-success mb-3">+ Novo Gado</a>

<table class="table table-striped table-bordered">
    <thead class="table-success">
        <tr>
            <th>ID</th>
            <th>C√≥digo</th>
            <th>Fazenda</th>
            <th>Peso (kg)</th>
            <th>Leite (L/semana)</th>
            <th>Ra√ß√£o (kg/semana)</th>
            <th>Vivo</th>
            <th>A√ß√µes</th>
        </tr>
    </thead>
    <tbody>
        {% for gado in gados %}
            <tr>
                <td>{{ gado.id }}</td>
                <td>{{ gado.codigo }}</td>
                <td>{{ gado.fazenda.nome }}</td>
                <td>{{ gado.peso }}</td>
                <td>{{ gado.leite }}</td>
                <td>{{ gado.racao }}</td>
                <td>
                    {% if gado.vivo %}
                        <span class="badge bg-success">Sim</span>
                    {% else %}
                        <span class="badge bg-danger">N√£o</span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('gados_show', {id: gado.id}) }}" class="btn btn-sm btn-primary">Ver</a>
                    <a href="{{ path('gados_edit', {id: gado.id}) }}" class="btn btn-sm btn-warning">Editar</a>

                    {% if gado.vivo %}
                        <form action="{{ path('gados_abater', {id: gado.id}) }}" method="post" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('abater' ~ gado.id) }}">
                            <button class="btn btn-sm btn-danger" onclick="return confirm('Confirmar abate?')">Abater</button>
                        </form>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr><td colspan="8" class="text-center">Nenhum gado cadastrado.</td></tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
